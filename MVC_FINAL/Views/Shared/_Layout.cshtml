    <div class="container">
        <div class="content">

            @RenderBody()


            <div class="clear"></div>
        </div>
    </div>



    <script src="~/Scripts/jquerymask.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
